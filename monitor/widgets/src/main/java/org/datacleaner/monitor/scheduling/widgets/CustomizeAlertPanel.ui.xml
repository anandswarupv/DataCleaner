<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:shared='urn:import:org.datacleaner.monitor.shared.widgets'>

	<g:HTMLPanel styleName="CustomizeAlertPanel">

		<div class="FormRow">
			<span class="FormKey">Metric:</span>
			<div class="FormValue">
				<shared:MetricAnchor ui:field="metricAnchor" />
			</div>
		</div>

		<div class="FormRow">
			<span class="FormKey">Description:</span>
			<div class="FormValue">
				<g:TextBox ui:field="descriptionTextBox" />
			</div>
		</div>

		<div class="FormRow">
			<span class="FormKey">Severity:</span>
			<div class="FormValue">
				<g:FlowPanel ui:field="severityPanel" />
			</div>
		</div>

		<div class="FormRow">
			<span class="FormKey">Maximum value:</span>
			<div class="FormValue">
				<shared:NumberTextBox ui:field="maximumValueTextBox" />
			</div>
		</div>

		<div class="FormRow">
			<span class="FormKey">Minimum value:</span>
			<div class="FormValue">
				<shared:NumberTextBox ui:field="minimumValueTextBox" />
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder>